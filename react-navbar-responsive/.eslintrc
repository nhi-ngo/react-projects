{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es2020": true
  },
  "root": true,
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
		"prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
	  "react/jsx-filename-extension": [1, {
      "extensions": [".js", ".jsx"]
    }],
		"react/jsx-one-expression-per-line": "off",
    "no-console": 2,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 85,
        "tabWidth": 2,
        "semi": false
      }
    ]
  }
}
